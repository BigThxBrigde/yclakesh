<div id="loadingMask"></div>
<script type="text/javascript" src="/javascripts/mask.js"></script>
<div class="row col-md-8" style="margin: 20px 10px">
    <% if(operation=='add'){ %>

    <div class="box box-success">
        <div class="box-header with-border">
            <h2 class="box-title">添加新用户</h3>
        </div>
        <form class="form-horizontal" role="form">

            <div class="box-body">


                <div class="form-group">
                    <label class="col-xs-2 control-label" for="userName">名字</label>
                    <div class="col-xs-3">
                        <input class="form-control" id="userName" type="text" placeholder="请输入用户名" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-2 control-label" for="password">密码</label>
                    <div class="col-xs-3">
                        <input class="form-control" id="password" type="password" placeholder="请输入密码" />
                    </div>

                </div>

            </div>

            <div class="box-footer">
                <div class="form-group">
                    <label class="col-xs-3"></label>
                    <button type="button" id="addButton" style="margin-left:-10px"
                        class="btn btn-success col-xs-2">添加</button>

                </div>
                <div id="errorHolder" class="form-group">
                </div>
            </div>
        </form>
        <!-- /.box-body -->
    </div>
    <script type="text/javascript" src="javascripts/user.add.js"></script>
    <% } else if(operation == 'modify') {%>
    <div class="box box-success">
        <div class="box-header with-border">
            <h2 class="box-title">修改用户数据</h3>
        </div>
        <form class="form-horizontal" role="form">

            <div class="box-body">
                <div class="form-group">

                    <label class="col-xs-2 control-label" for="members">用户</label>
                    <div class="col-xs-3">
                        <select id="users" class="form-control selectpicker show-tick" data-live-search="true"  style="width: 100%;"
                            tabindex="-1" aria-hidden="true">
                            <% users.forEach(user =>{ %>
                            <option value="<%=user.Name%>"><%=user.Name%></option>
                            <% }) %>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-2 control-label" for="password">密码</label>
                    <div class="col-xs-3">
                        <input class="form-control" id="password" type="password" placeholder="请输入密码" />
                    </div>
                </div>
                


            </div>

            <div class="box-footer">
                <div class="form-group">
                        <label class="col-xs-3"></label>
                        <button type="button" id="deleteButton" style="margin-right: 30px;margin-left: -45px;"
                            class="btn btn-success col-xs-1">删除</button>
                        <button type="button" id="updateButton" class="btn btn-success col-xs-1">更新</button>
                </div>
                <div id="errorHolder" class="form-group">
                </div>
            </div>
        </form>
        <!-- /.box-body -->
    </div>
    <script type="text/javascript" src="javascripts/user.modify.js"></script>
    <% } %>
</div>